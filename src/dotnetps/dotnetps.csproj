<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <PackAsTool>true</PackAsTool>
    <Version>1.0.3</Version>
    <Description>A tool that helps you monitor dotnet processes running.
 
 Install with the .NET CLI 2.1 or newer:
 dotnet install tool -g dotnetps
 
 Run dotnetps from the command line, for example:
 dotnetps</Description>
  </PropertyGroup>
 
 <ItemGroup>
    <PackageReference Include="docopt.net" Version="0.6.1.9" />
  </ItemGroup>
</Project>
